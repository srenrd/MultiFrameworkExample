using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;
using GolfBox.Framework.OnlinePayment;
using GolfBox.Framework.Core;

public partial class Api_OnlinePayment_GetPayments : System.Web.UI.Page
{
    protected void Page_Load(object sender, EventArgs e)
    {
        List<Payment> result = new List<Payment>();
        string data = System.Text.Encoding.UTF8.GetString(Request.BinaryRead(Request.ContentLength));
        try
        {
            List<int> paymentIDList = Newtonsoft.Json.JsonConvert.DeserializeObject<List<int>>(data);

            result = Payment.List(paymentIDList).ToListOrEmpty();
        }
        catch (Exception ex)
        {
            
        }
        var json = Newtonsoft.Json.JsonConvert.SerializeObject(result);
        Response.Clear();
        Response.Write(json);
        Response.End();
    }
}